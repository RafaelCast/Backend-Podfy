


########################   Tela de Downloads   ###################################### 
<DownloadScreen>
    BoxLayout:
        orientation: "vertical"
        pos_hint: {'center_x': 0.5, 'top': 1}
        padding: [15,15,15,15]
        size: root.width, root.height
        canvas.before:
            Color:
                rgb: utils.get_color_from_hex(app.bg_dark_default)
            Rectangle:
                pos:self.pos
                size:self.size
        TopBar:
            #Do something 
        EmptySpace:
            height: 10

        ScreenTitle:
            text: 'Downloads'
        EmptySpace:
            height: 10
        # NoContentMessage:
        #     text:'Ainda não há nada aqui'

        MDBoxLayout:
            orientation: 'vertical'
            ScrollView:
                do_scroll_x: False
                do_scroll_y: True
                size: self.size
                DownloadList:





<DownloadList>
    orientation: 'vertical'
    canvas.before:
        Color:
            rgb: (1,0,0,1)
        Rectangle:
            pos:self.pos
            size:self.size


<ListItem>
    orientation:'horizontal'
    
    Image:
        source: root.imgRef #pega a variável imgRef da classe ListItem
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: root.itemName
        Label:
            text: root.authorName



