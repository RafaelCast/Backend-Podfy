


########################   Tela de Downloads   ###################################### 
<DownloadScreen>
    BoxLayout:
        orientation: "vertical"
        pos_hint: {'center_x': 0.5, 'top': 1}
        padding: [15,15,15,15]
        size: root.width, root.height
        canvas.before:
            Color:
                rgb: utils.get_color_from_hex(app.bg_dark_default)
            Rectangle:
                pos:self.pos
                size:self.size
        TopBar:
            #Do something 
        EmptySpace:
            height: 10

        ScreenTitle:
            text: 'Downloads'
        EmptySpace:
            height: 10

        MDBoxLayout:
            orientation: 'vertical'
            ScrollView:
                do_scroll_x: False
                do_scroll_y: True
                size: self.size
                # DownloadList:
                NoContentMessage:
                    text:'Ainda não há nada aqui'





<DownloadList>
    orientation: 'vertical'
    # canvas.before:
    #     Color:
    #         rgb: (1,0,0,1)
    #     Rectangle:
    #         pos:self.pos
    #         size:self.size


<ListItem>
    orientation:'horizontal'
    
    Image:
        source: root.imgRef #pega a variável imgRef da classe ListItem
        size_hint: None, None
        size: 70,70
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
    BoxLayout:
        orientation: 'vertical'

        Label:
            text: root.itemName
            font_name: app.inter_semibold
            font_size: 16
            color: (1,1,1,1)
            size_hint: 1, None
            padding: [10,0]
            height: 20
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            text_size: self.size
            halign: 'left'
            valign: 'center'

        Label:
            text: root.authorName


