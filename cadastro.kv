<Button>
    font_name: app.inter_bold

<Label> 
    font_size:14
    font_name: app.inter_semibold
    color: '#4F5357' #Define a cor dos textos

<TextInput>
    background_normal: ''
    background_color: (0,0,0,0)
    font_size: 14

#RoundButton recebe os atributos de Button
<RoundButton@Button>
    background_color: (0,0,0,0)
    background_normal: ''
    border_radius: [24]
    color: (1,1,1,1)
    font_name: app.inter_bold
    font_size: 21
    canvas.before:
        Color:
            rgba: (254/255, 194/255, 0, 1)
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: self.border_radius

#Campos de preenchimento de informações
<StrokeInputField@TextInput>
    font_name: app.inter_regular
    back_color: (79/255, 83/255, 87/255, 1)
    border_radius: 8
    color: self.back_color
    cursor_color: '#FEC200'
    canvas.before:
        Color:
            rgba: self.back_color
        Line:
            width: 1.0
            rounded_rectangle: self.x, self.y, self.width, self.height, self.border_radius, 50 #rounded_rectangle: x, y, width, height, corner_radius, resolution


<CheckBox>
    color: '#4F5357'        

<LoginScreen>
    email: email
    confirm: confirm
    cpf: CPF
    senha: Senha

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height #Define a BoxLayout com o tamanho da tela!
        background_color: (0,0,0,1)
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        padding: 30

        Image:
            source: app.podfy_logo_white
            pos_hint: {'center_x': 0.5}
            size_hint: None, None
            propSize: 0.15 #15%
            size: 1920*self.propSize, 1080*self.propSize #Proporção da logo x variável que reescala seu tamanho!

        Label:
            text: "Inscreva-se\nGratuitamente!"
            font_size:32
            font_name: app.inter_bold
            color: '#292B2D'
            halign: 'center' #Alinha o "parágrafo" do texto de forma centralizada

        Label:
            #empty space

        Label:
            text: "E-mail"
            
        StrokeInputField:
            id: email
            multiline: False
            required: True
            focus: True
            hint_text: 'Insira um e-mail válido'

        Label:
            text: "Confirmação de E-mail"
        StrokeInputField:
            id: confirm
            multiline: False
            hint_text: 'Insira novamente o seu e-mail'

        Label:
            text: "CPF"
        StrokeInputField:
            id: CPF
            multiline: False
            hint_text: 'Insira o seu CPF'

        Label:
            text: "Senha"
        StrokeInputField:
            id: Senha
            multiline: False
            password: True
            hint_text: 'Insira a sua senha'

        Label:
            text: "Data de Nascimento"

        GridLayout:
            cols: 3
            spacing: 12

            StrokeInputField:
                hint_text: 'Dia'
            StrokeInputField:
                hint_text: 'Mês'
            StrokeInputField:
                hint_text: 'Ano'

        GridLayout:
            cols: 2

            CheckBox:
                #Faz alguma coisa
            Label:
                text: "Concordo com os\nTermos e Condições do Podfy."
                font_name: app.inter_semibold
                font_size: 13

        RoundButton:
            text: "Inscreva-se"
            on_press: root.btn()

        Label:
            text: "Já tem uma conta? Faça login"
            font_name: app.inter_regular
            font_size: 12


